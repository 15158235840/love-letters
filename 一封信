        // åˆ›å»ºé£˜è½çš„çˆ±å¿ƒ
        function createFloatingHeart() {
            const heart = document.createElement('div');
            heart.className = 'floating-heart';
            heart.innerHTML = 'â¤ï¸';
            heart.style.left = Math.random() * 100 + '%';
            heart.style.animationDuration = (Math.random() * 5 + 10) + 's';
            heart.style.fontSize = (Math.random() * 2 + 1) + 'em';
            document.body.appendChild(heart);
            
            setTimeout(() => heart.remove(), 15000);
        }

        // æ¯2ç§’åˆ›å»ºä¸€ä¸ªé£˜è½çš„çˆ±å¿ƒ
        setInterval(createFloatingHeart, 2000);

        // æ£€æŸ¥ç­”æ¡ˆ
        function checkAnswer() {
            const answer = document.getElementById('answerInput').value;
            const errorMessage = document.getElementById('errorMessage');
            
            // æ­£ç¡®ç­”æ¡ˆï¼š881å¤©
            if (answer === '881') {
                // éšè—é—®é¢˜é¡µé¢
                const questionPage = document.getElementById('questionPage');
                questionPage.style.opacity = '0';
                
                // å»¶è¿Ÿæ˜¾ç¤ºä¸»å†…å®¹
                setTimeout(() => {
                    questionPage.style.display = 'none';
                    document.getElementById('mainContent').style.display = 'block';
                    document.getElementById('musicControl').style.display = 'flex';
                    
                    // æ’­æ”¾éŸ³ä¹
                    playMusic();
                    
                    // æ˜¾ç¤ºæˆåŠŸæç¤º
                    setTimeout(() => {
                        alert('ğŸ‰ ç­”å¯¹å•¦ï¼å‡†å¤‡äº†ç‰¹åˆ«çš„æƒŠå–œç»™ä½ ï¼Œæ…¢æ…¢çœ‹å§~');
                    }, 500);
                }, 1000);
            } else {
                // æ˜¾ç¤ºé”™è¯¯ä¿¡æ¯
                errorMessage.style.opacity = '1';
                document.getElementById('answerInput').value = '';
                document.getElementById('answerInput').focus();
                
                // éœ‡åŠ¨æ•ˆæœ
                const container = document.querySelector('.question-container');
                container.style.animation = 'none';
                setTimeout(() => {
                    container.style.animation = 'slideIn 0.5s ease-out';
                }, 10);
            }
        }

        // æ’­æ”¾éŸ³ä¹
        function playMusic() {
            const music = document.getElementById('bgMusic');
            const musicIcon = document.getElementById('musicIcon');
            
            // å°è¯•æ’­æ”¾éŸ³ä¹
            music.play().catch(e => {
                console.log('è‡ªåŠ¨æ’­æ”¾å¤±è´¥:', e);
                musicIcon.textContent = 'ğŸ”‡';
            });
        }

        // éŸ³ä¹æ§åˆ¶æŒ‰é’®
        document.getElementById('musicControl').addEventListener('click', function() {
            const music = document.getElementById('bgMusic');
            const musicIcon = document.getElementById('musicIcon');
            
            if (music.paused) {
                music.play();
                musicIcon.textContent = 'ğŸµ';
            } else {
                music.pause();
                musicIcon.textContent = 'ğŸ”‡';
            }
        });

        // å›è½¦é”®æäº¤ç­”æ¡ˆ
        document.getElementById('answerInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                checkAnswer();
            }
        });

        // é¡µé¢åŠ è½½å®Œæˆåçš„æ¬¢è¿æç¤º
        window.onload = function() {
            setTimeout(() => {
                // æ˜¾ç¤ºåˆå§‹çˆ±å¿ƒ
                for(let i = 0; i < 3; i++) {
                    setTimeout(createFloatingHeart, i * 500);
                }
            }, 500);
        }
    </script>
